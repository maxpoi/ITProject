<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="UI.timeline.TimelineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="🚶Timeline 🏃"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/timelineText"
            android:textSize="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/welcome_text"
            android:text="Your story starts in"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/timelineIntro"
            android:textSize="40dp"
            />

        <TextView
            android:id="@+id/starting_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1897"
            android:textStyle="italic"
            android:textColor="@color/timelineIntro"
            android:textSize="40dp"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/timeline_f_layout"
            >


            <View
                android:layout_width="7dp"
                android:layout_height="2250dp"
                android:layout_gravity="center"
                android:background="@color/timelineLine"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="0dp"
                android:textColor="@color/timelineLine"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:orientation="vertical"
                android:id="@+id/timeline_layout"
                tools:ignore="MissingConstraints" />

            />
        </FrameLayout>


    </LinearLayout>

</ScrollView>