<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--    <include layout="@layout/app_bar_with_fab" />-->

    <ImageView
        android:id="@+id/recycleview_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:contentDescription="@string/grid_image" />

    <ImageButton
        android:id="@+id/delete_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/recycleview_image"
        android:layout_alignEnd="@id/recycleview_image"
        android:layout_margin="3dp"
        android:src="@android:drawable/ic_delete"
        android:visibility="gone" />

</RelativeLayout>