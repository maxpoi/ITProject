<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.homesweethome">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".HelperClasses.HomeSweetHome"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Day_Theme">
        <activity
            android:name=".UI.LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.HomePage"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"/>
        <activity android:name=".UI.SingleArtifactPage"/>
        <activity android:name=".UI.AddPage" />
        <activity android:name=".UI.SingleImagePage"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"/>
        <activity android:name=".UI.register.RegisterActivity" />
        <activity android:name=".UI.register.RetrievePasswordActivity" />
        <activity android:name=".UI.register.RegisterInformationActivity" />
        <activity android:name=".UI.timeline.TimelineActivity" />
        <activity android:name=".UI.register.RegisterSuccessDialog" />
        <activity android:name=".UI.SearchPage" />
        <activity android:name=".UI.PopUpText"
            android:theme="@style/Theme_Dialog" />
        <activity android:name=".UI.PopUpEditText"
            android:theme="@style/Theme_Dialog"/>
        <activity android:name=".UI.VideoPlayPage"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"/>
        <activity android:name=".UI.PopUpImage"
            android:theme="@style/Theme_Dialog"/>
        <activity android:name=".DeprecatedClasses.ScreenshotGenerator"
            android:theme="@style/Theme_Dialog"/>
    </application>

</manifest>